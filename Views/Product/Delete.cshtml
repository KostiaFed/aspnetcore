@model firstwebapp.Models.Product
@{
    ViewData["Title"] = "Видалити продукт";
}

<h2>Ви впевнені, що хочете видалити цей продукт?</h2>

<div>
    <p><strong>Назва:</strong> @Model.Name</p>
    <p><strong>Ціна:</strong> @Model.Price</p>
    <p><strong>Опис:</strong> @Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Видалити</button>
    <a asp-action="List">Скасувати</a>
</form>
